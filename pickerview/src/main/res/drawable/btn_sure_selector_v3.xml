<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 没有焦点时的背景颜色 -->
    <item android:drawable="@drawable/bg_corner22_green_v3" android:state_window_focused="false"/>
    <!-- 触摸模式下单击时的背景颜色 -->
    <item android:drawable="@drawable/bg_corner22_green_click_v3" android:state_pressed="true"/>
    <!-- 获得焦点时的背景颜色 -->
    <item android:drawable="@drawable/bg_corner22_green_click_v3" android:state_focused="true"/>
    <!-- 默认时的背景颜色 -->
    <item android:drawable="@drawable/bg_corner22_green_v3"/>
</selector>